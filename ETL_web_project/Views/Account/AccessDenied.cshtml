@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/auth.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger shadow-sm">
                <h4 class="alert-heading">Access denied</h4>
                <p>
                    You do not have permission to access this page or perform this action.
                </p>
                <p class="mb-0">
                    If you believe this is a mistake, please contact your system administrator or ETL platform owner
                    and ask them to review your role and permissions.
                </p>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index" asp-controller="Dashboard" class="btn btn-outline-secondary">
                    Go to Dashboard
                </a>
                <a asp-action="Login" asp-controller="Account" class="btn btn-outline-primary">
                    Sign in with a different account
                </a>
            </div>

            <div class="mt-3">
                <small class="text-muted">
                    Note: Some sections of the Retail DW &amp; ETL Monitor (such as ETL job scheduling,
                    staging table inspection, or admin settings) may be restricted to specific roles
                    (e.g. <em>Admin</em> or <em>Analyst</em>).
                </small>
            </div>
        </div>
    </div>
</div>
